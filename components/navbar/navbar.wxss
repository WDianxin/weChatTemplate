.custom{
  position: fixed!important;
  width: 100%;
  top: 0;
  left: 0;
  height: 90rpx;
  background: #fff;
  z-index: 999;
}

.title-container {
  height: 88rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.capsule {
  margin-left: 20rpx;
  height: 64rpx;
  /* border: 1px solid #fff; */
  border-radius: 32rpx;
  display: flex;
  align-items: center;
}

.capsule > view {
  width: 64rpx;
  height: 60%;
  position: relative;
}

.capsule > view:nth-child(2) {
  border-left: 2rpx solid #333;
}
.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.title {
  color: #333;
  font-weight: bold;
  /* position: absolute;
  left: 104px;
  right: 104px; */
  font-size: 28rpx;
  flex: 1; 
  overflow: hidden;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: -84rpx;
}
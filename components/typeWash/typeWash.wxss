/* components/typeWash/typeWash.wxss */
.typeWash {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.typeWash .li {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.typeWash .li image {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  object-fit: cover;
  border-radius: 45rpx;
}

.typeWash .li text {
  color: #474747;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-top: 15rpx;

}
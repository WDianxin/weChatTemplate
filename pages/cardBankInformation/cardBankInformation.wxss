/* pages/cardBankInformation/cardBankInformation.wxss */
@import "../../template/registerSteps/registerSteps.wxss";
.submit-btn{
  width: 85%;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}
.submit-wrapper{
  text-align: center;
  padding-top: 30rpx;
  
}
.submit-wrapper text{
  color:#999999 ;
  font-size: 28rpx;
}
.submit-wrapper text:nth-child(2){
  color:#6299E2 ;
}

/* 控制星号样式 */
.van-cell--required:before {
  left: 36rpx!important;
}
.van-cell__title , .van-cell__title {
 margin-left: 18rpx!important;
 font-weight: 600;
}
.idImgBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
  background: #fff;
  padding: 0 100rpx;
  padding-bottom: 20rpx;
}

.imgLeft,
.imgRegit {
  background: #F7F7F7;
  /* padding-top: 30rpx; */
  margin-top: 30rpx;
  width: 240rpx;
}

.but {
  background-color: #6299E2;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 100);
  border-radius: 0px 0px 10rpx 10rpx;
  width: 240rpx;
  margin-top: -8rpx;
}

.idImgBox .imgLeft image,
.idImgBox .imgRegit image {
  display: inline-block;
  width: 240rpx;
  height: 160rpx;
  object-fit: cover;
  margin-right: 30rpx;
  border-radius: 6rpx 6rpx 0 0;
}

.but2{
  width: 100%;
  padding-bottom: 20rpx;
  background: #fff;
  text-align: center;
}
.but2 button{
  width: 180rpx;
  margin-left: 30rpx;
}

/* pages/identitySelection/identitySelection.wxss */
page {
  /* background-color: #f7f7f7; */
  background-color: #fff;
}
.identitySelection{
  width: 100%;
  height: 90%;
}
.listBox{
  box-sizing: border-box;
  display: -webkit-flex; /*在webkit内核的浏览器上使用要加前缀*/
   display: flex; 
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  flex-wrap: wrap;

}
.list , .active{
  margin-top: 20rpx;
  background-color: #f7f7f7;
  box-sizing: border-box;
  padding: 20rpx ;
  text-align: center;
  width: 32%;
  border-radius: 6rpx;
}
.active{
  background-color: #6299E2!important;
}
.submit-wrapper{
  position: fixed;
  width: 86%;
  margin-left: 7%;
  bottom: 30rpx;
  font-size: 40rpx;
}

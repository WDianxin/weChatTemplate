/* pages/identityStaffReg/identityStaffReg.wxss */
@import "../../template/registerSteps/registerSteps.wxss";

/* 控制星号样式 */
.van-cell--required:before {
  left: 36rpx !important;
}

.van-cell__title,
.van-cell__title {
  margin-left: 18rpx !important;
  font-weight: 600;
}

.idImgBox {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.imgLeft,
.imgRegit {
  background: #F7F7F7;
  /* padding-top: 30rpx; */
}

.but {
  background-color: #6299E2;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 100);
  border-radius: 0px 0px 10rpx 10rpx;
  width: 240rpx;
  margin-top: -8rpx;
}

.idImgBox .imgLeft image,
.idImgBox .imgRegit image {
  display: inline-block;
  width: 240rpx;
  height: 160rpx;
  object-fit: cover;
  /* margin-right: 30rpx; */
  border-radius: 6rpx 6rpx 0 0;
}

.remark {
  background: #fff;
  padding: 20rpx 40rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 40rpx;
}

.remark .ts {
  color: #6299E2;
}

.remark .zt {
  color: #FC6F80;
}

.submit-wrapper {
  margin: 60rpx auto 0;
  width: 85%;
}
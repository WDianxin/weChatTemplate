@import '../../vant-weapp/common/index.wxss';

page {
  background-color: #f7f7f7;
  height: 100%;
}
.bagImag{
  display: inline-block;
  width: 100%;
}
.title {
  width: 100%;
  line-height: 40rpx;
  color: #fff;
  font-size: 100rpx;
  font-weight: bold;
  position: fixed;
  top: 340rpx;
  text-align: center;
}
.butBox{
  margin-top: 100rpx;
  margin-left: 10%;
  background-color: #fff;
  width: 80%;
  height: 400rpx;
  border-radius: 20rpx;
  box-shadow:2rpx 2rpx  2rpx  #f7f7f7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.butBox .but {
  background-color: #608DFC;
  padding: 30rpx;
  box-sizing: border-box;
  width: 90%;
  border-radius: 10rpx;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}
.butBox .but .bt{
  margin-left: 10rpx;
}
.butBox .but .jt{
  margin-left: 120rpx;
}


.title text {
  border-left: 6rpx solid #608DFC;
  padding-left: 16rpx;
}


  flex-wrap: wrap;
  width: 100%;
  background: #fff;
  padding: 30rpx 0;
  border-top: 1rpx solid #F7F7F7;
}

.topBox .title {
  color: #101010;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.topBox .money {
  color: #FCCC60;
  font-size: 40rpx;
  margin-top: 30rpx;
}

.listBox {
  margin-top: 10rpx;
}

.titleBox {
  margin-right: 12px;
}

.listOrdersDetails .valueBox {
  text-align: left !important;
  color: #323233 !important;

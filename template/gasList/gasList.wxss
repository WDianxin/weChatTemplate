/* pages/template/gasList/gasList.wxss */
.listRow {
  border-top: 1px solid #F1F1F1 ;
  padding: 30rpx 24rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  color: #767676;
}

.TopBox {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
}

.TopBox .imgBox {
  text-align: center;
  vertical-align: middle;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 15rpx 0 0;
}

.TopBox .imgBox .img {
  display: inline-block;
  width: 100%;
  height: 100%;
  vertical-align: middle;
  object-fit: cover;
}

.TopBox .conent {
  flex: 1;
  width: 200rpx;
  text-align: left;
  font-size: 20rpx;
  padding: 20rpx;
}

.TopBox .conent .name {
  text-align: left;
  font-size: 32rpx;
  line-height: 46rpx;
}


.TopBox .conent .region {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #ababab;
}
.TopBox .conent .moneyS {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #101010 ;
  float: right;
}



.money {
  text-align: right;
  line-height: 50rpx;
  font-size: 30rpx;
}

.money text {
  font-size: 36rpx;
  color: #FCCC60;
}

.orderNum {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.orderNum {
  font-size: 32rpx;
  color: #101010;
  line-height: 60rpx;
}

.orderNum .label,
.orderNum .num {
  margin-left: 10rpx;
  font-weight: bold;
}